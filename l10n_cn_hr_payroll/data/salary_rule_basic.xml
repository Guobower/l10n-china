        <record id="hr_rule_sl" model="hr.salary.rule">
            <field name="category_id" ref="DED2"/>
            <field name="name">Sick Leave</field>
            <field name="code">SL</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="sequence">708</field>
            <field name="condition_select">none</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute"><![CDATA[
worked_years = employee.worked_years or 0
working_days = 21.75
try:
    shortsick_days = worked_days.SickLeaves.number_of_days
except:
    shortsick_days = 0
try:
    longsick_days = worked_days.LongSickLeaves.number_of_days
except:
    longsick_days = 0

short_deduction = 0
if shortsick_days > 0:
    if worked_years >= 8:
        short_deduction= categories.BASIC * 0.0 / working_days * shortsick_days
    elif worked_years >= 6:
        short_deduction= categories.BASIC * 0.1 / working_days * shortsick_days
    elif worked_years >= 4:
        short_deduction= categories.BASIC * 0.2 / working_days * shortsick_days
    elif worked_years >= 2:
        short_deduction= categories.BASIC * 0.3 / working_days * shortsick_days
    else:
        short_deduction= categories.BASIC * 0.4 / working_days * shortsick_days

long_deduction = 0
if longsick_days > 0:
    if worked_years >= 3:
        long_deduction = categories.BASIC * 0.4 / working_days * longsick_days
    elif worked_years >= 1:
        long_deduction= categories.BASIC * 0.5 / working_days * longsick_days
    else:
        long_deduction = categories.BASIC * 0.6 / working_days * longsick_days
result = short_deduction + long_deduction

]]>
            </field>
        </record>

        <record id="hr_rule_upl" model="hr.salary.rule">
            <field name="category_id" ref="DED2"/>
